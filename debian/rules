#!/usr/bin/make -f

include /usr/share/cdbs/1/rules/debhelper.mk
include /usr/share/cdbs/1/class/gnome.mk

binary-install/windowapplets::
	install -Dp --mode=0755 buttons/windowbuttons.schemas \
	$(CURDIR)/debian/tmp/usr/share/gconf/schemas/windowbuttons.schemas
	install -Dp --mode=0755 title/windowtitle.schemas \
	$(CURDIR)/debian/tmp/usr/share/gconf/schemas/windowtitle.schemas
	rm -rf $(CURDIR)/debian/tmp/usr/doc

clean::
	rm -f $(CURDIR)/debian/debhelper.log
